---
import '../styles/global.css';
import Nav from '../components/nav/Nav.astro';
import { Analytics } from '@vercel/analytics/react';
import { SpeedInsights } from '@vercel/speed-insights/react';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Jules O'Dea - Frontend Developer | Auckland, New Zealand",
  description = "Frontend Developer specialising in modern web technologies and user experiences based in New Zealand.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="keywords" content="Frontend Developer, Web Developer, React, Next.js, Auckland, New Zealand, Portfolio" />
    <meta name="author" content="Jules O'Dea" />
    <meta name="creator" content="Jules O'Dea" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="en_NZ" />
    <meta property="og:url" content="https://juleso.vercel.app" />
    <meta property="og:title" content="Jules O'Dea - Frontend Developer" />
    <meta property="og:description" content="Frontend Developer specializing in modern web technologies and user experiences. Based in Auckland, New Zealand." />
    <meta property="og:site_name" content="Jules O'Dea Portfolio" />

    <!-- Robots -->
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow, max-video-preview:-1, max-image-preview:large, max-snippet:-1" />

    <!-- Google Verification -->
    <meta name="google-site-verification" content="5f316b0ee6e8141e" />

    <link rel="canonical" href="https://juleso.vercel.app" />
    <title>{title}</title>

    <script is:inline>
      // Prevent flash of wrong theme
      (function() {
        const theme = localStorage.getItem('theme') || 'dark';
        document.documentElement.classList.add(theme);
      })();
    </script>
  </head>
  <body>
    <Nav />
    <div class="mx-auto px-4 max-w-7xl">
      <slot />
    </div>
    <Analytics client:only="react" />
    <SpeedInsights client:only="react" />
  </body>
</html>
